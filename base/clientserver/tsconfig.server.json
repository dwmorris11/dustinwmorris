{
    "extends": "../tsconfig.custom.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "sourceMap": true,
        "declarationMap": true,
        "declaration": true,
        "emitDeclarationOnly": false,
        "noEmit": false,
        "lib": [
            "es2023"
        ],
        "composite": true,
        "outDir": "../server",
        "rootDir": ".",
        "paths": {
            "@public/*": ["./public/*"]
        }
    },
    "include": ["**/*.ts"]
}